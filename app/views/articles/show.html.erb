<article class="blog-post">
  <h2 class="blog-post-title mb-1"><%= @article.title %></h2>
  <p class="blog-post-meta"><%= time_stamp_articles(@article.created_at) %>by <a href="#">Chris</a></p>

  <p><%= @article.body %></p>

  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', article_path(@article),
              method: :delete,
              data: { confirm: 'Are yot sure?' },
              class: 'btn btn-danger' %>

  <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
</article>
